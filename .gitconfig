[user]
    name = Nikolay Botev
    email = nikolaybotev.b@gmail.com
[core]
    excludesfile = ~/.gitignore
[fetch]
    prune = true
[push]
    default = current
    followTags = true
[color]
    ui = true
[format]
    pretty = fuller
[log]
    date = local
    decorate = true
    follow = true

[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    d = diff
    unstage = reset HEAD --
    last = log -1 HEAD

[difftool "kdiff3"]
    path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
    trustExitCode = false
[difftool]
    prompt = true
[diff]
    tool = bc3
[mergetool "kdiff3"]
    path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
    trustExitCode = false
[mergetool]
    keepBackup = false
[merge]
    tool = bc3
[mergetool "bc3"]
    trustExitCode = true
[difftool "p4mergetool"]
    cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $LOCAL $REMOTE
[mergetool "p4mergetool"]
    cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
    trustExitCode = false
